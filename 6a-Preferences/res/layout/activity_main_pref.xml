<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainPrefActivity" >

    <Button
        android:id="@+id/prf_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openPreferences"
        android:text="Open Preferences" />

    <Button
        android:id="@+id/prf_btn_show_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showValues"
        android:text="Show Values" />

    <Button
        android:id="@+id/prf_btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="disableFruits"
        android:text="Disable Fruits" />

    <Button
        android:id="@+id/prf_btn_advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="advancedFruits"
        android:text="Advanced Fruits" />

</LinearLayout>