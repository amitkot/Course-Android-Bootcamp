<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amitkot.android.actionbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.amitkot.android.actionbar.MainActionbarActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amitkot.android.actionbar.EnableActionBarActivity"
            android:label="@string/title_activity_enable_action_bar"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.amitkot.android.actionbar.RemoveActionBarActivity"
            android:label="@string/title_activity_remove_action_bar"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.amitkot.android.actionbar.ActionsActivity"
            android:label="@string/title_activity_actions" >
        </activity>
        <activity
            android:name="com.amitkot.android.actionbar.SplitActionsActivity"
            android:label="@string/title_activity_split_actions"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.amitkot.android.actionbar.AppIconUpActivity"
            android:label="@string/title_activity_app_icon_up" >
        </activity>
        <activity
            android:name="com.amitkot.android.actionbar.SpinnerActionbarActivity"
            android:theme="@android:style/Theme.Holo.Light"
            android:label="@string/title_activity_spinner_actionbar" >
        </activity>
    </application>

</manifest>
